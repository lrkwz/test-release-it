{
    "hooks": {
        "before:bump": "git checkout -b release-$version",
        "after:bump": "git checkout main && git merge release-version"
    },
    "git": {
        "commitMessage": "chore: release v${version}"
    },
    "github": {
        "release": false
    },
    "gitlab": {
        "release": false
    },
    "npm": {
        "publish": false
    }
}
